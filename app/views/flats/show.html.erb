      <div class="grey-card">
        <h5>A bit more about this flat...</h5>
        <p><%= @flat.description %></p>
      </div>
    </div>
    <div>
      <div class="grey-card">
        <%= link_to "Book Now", flat_path, class: "btn btn-success" %>
      </div>
    </div>
  </div>

  <%= link_to "Back to Flats", flats_path, class: "btn btn-primary mt-4" %>
